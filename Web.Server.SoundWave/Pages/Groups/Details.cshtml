@page
@model Web.Server.SoundWave.Pages.Groups.DetailsModel

@if (Model.Group is not null)
{
    <section class="h-100 h-custom" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="row">
                                <div class="d-flex gap-5">
                                    <img src="@Model.Group.UrlPreviewImg" style="width: 650px" class="rounded float-start" alt="@Model.Group.Title">
                                    <div>
                                        <h2 class="mb-3 text-body">
                                            Группа: @Model.Group.Title
                                        </h2>
                                    </div>
                                </div>
                                <div class="col-lg-7 mt-4">
                                    <h5 class="mb-3 text-body">
                                        Альбомы: 
                                    </h5>
                                    @foreach (var album in Model.Albums)
                                    {
                                        <div class="card" style="width: 18rem;">
                                            <a asp-page="AlbumDetails" asp-route-id="@album.Id" style="text-decoration: inherit; color: inherit">
                                                <img src="@album.UrlPreviewImg" class="card-img-top" alt="@album.Title">
                                                <div class="card-body">
                                                    <h5 class="card-title">@album.Title</h5>
                                                </div>
                                            </a>
                                        </div>
                                    }
                                </div>
                                <div class="col-lg-7 mt-4">
                                    <h5 class="mb-3 text-body">
                                        Песни: 
                                    </h5>
                                    @foreach (var album in Model.Group.Albums)
                                    {
                                        @foreach (var song in album.Songs)
                                        {
                                            <div class="card mb-3">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between">
                                                        <div class="d-flex flex-row align-items-center">
                                                            <div class="ms-3">
                                                                <h5>@song.Title</h5>
                                                            </div>
                                                        </div>
                                                        <div class="d-flex flex-row align-items-center">
                                                            <audio controls src="@song.SongURL"></audio>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}